{
  "name": "classes-js-ts",
  "version": "1.0.0",
  "description": "Apostila completa sobre Classes em JavaScript e TypeScript",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "dev:exercicio1": "tsx watch src/exercicios/01-sistema-bancario/index.ts",
    "dev:exercicio2": "tsx watch src/exercicios/02-sistema-biblioteca/index.ts",
    "dev:exercicio3": "tsx watch src/exercicios/03-sistema-loja/index.ts",
    "dev:exercicio4": "tsx watch src/exercicios/04-padroes-projeto/index.ts",
    "dev:exemplo1": "tsx watch src/exemplos/01-conceitos-basicos/index.ts",
    "dev:exemplo2": "tsx watch src/exemplos/02-recursos-avancados/index.ts",
    "dev:exemplo3": "tsx watch src/exemplos/03-padroes-projeto/index.ts",
    "dev:exemplo4": "tsx watch src/exemplos/04-exemplos-praticos/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "javascript",
    "typescript",
    "classes",
    "oop",
    "tutorial"
  ],
  "author": {
    "name": "Jorge Henrique",
    "url": "https://github.com/jorgehenrrique"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jorgehenrrique/classes-js-ts.git"
  },
  "engines": {
    "node": ">= 18.0.0",
    "npm": ">= 8.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  }
}
